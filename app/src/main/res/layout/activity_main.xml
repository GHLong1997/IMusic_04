<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        />

    <com.hangoclong.music.utils.viewpager.UnSwipeViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_white"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <RelativeLayout
        android:id="@+id/relative_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_grayish"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_track_parent"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/text_track_name_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/image_track_parent"
            android:layout_toRightOf="@id/image_track_parent"
            android:maxLength="25"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_track_name_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/image_track_parent"
            android:layout_toRightOf="@id/image_track_parent"
            android:maxLines="1"
            android:textSize="@dimen/sp_13"
            />
        <ImageButton
            android:id="@+id/image_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/image_play"
            android:layout_toStartOf="@id/image_play"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_previous_black_36dp"
            android:tint="@android:color/black"
            tools:ignore="ContentDescription"
            />
        <ImageButton
            android:id="@+id/image_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/image_next"
            android:layout_toStartOf="@id/image_next"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_pause_black_36dp"
            android:tint="@android:color/black"
            tools:ignore="ContentDescription"
            />
        <ImageButton
            android:id="@+id/image_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next_black_36dp"
            android:tint="@android:color/black"
            tools:ignore="ContentDescription"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
